<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env SAURONBOT_MODEL)" doc="model type [model_01, model_02, model_03]"/>
  <arg name="slam_methods" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
  <arg name="configuration_basename" default="sauronbot_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>

  <!-- sauronbot -->
  <include file="$(find sauronbot_bringup)/launch/sauronbot_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
  <include file="$(find sauronbot_slam)/launch/sauronbot_$(arg slam_methods).launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find sauronbot_slam)/rviz/sauronbot_$(arg slam_methods).rviz"/>
  </group>
</launch>
