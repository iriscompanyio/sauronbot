<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env SAURONBOT_MODEL)" doc="model type [model_01, model_02, model_03]"/>
  <arg name="map_file" default="$(find sauronbot_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- sauronbot -->
  <include file="$(find sauronbot_bringup)/launch/sauronbot_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find sauronbot_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find sauronbot_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find sauronbot_navigation)/rviz/sauronbot_navigation.rviz"/>
  </group>
</launch>
