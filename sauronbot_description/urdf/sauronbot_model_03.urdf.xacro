<?xml version="1.0" ?>
<robot name="sauronbot" xmlns:xacro="http://ros.org/wiki/xacro">
	<xacro:include filename="$(find sauronbot_description)/urdf/common_properties.xacro"/>
  
  <!-- Arguments -->
  <xacro:arg name="camera_name"   default="rpi" />
  <xacro:arg name="camera_model"  default="RPICAMERA_V2" />
  <xacro:arg name="base_frame"    default="base_link" />
  <xacro:arg name="cam_pos_x"     default="0.07089" />
  <xacro:arg name="cam_pos_y"     default="0.0" />
  <xacro:arg name="cam_pos_z"     default="0.0801" />
  <xacro:arg name="cam_roll"      default="0.0" />
  <xacro:arg name="cam_pitch"     default="0.0" />
  <xacro:arg name="cam_yaw"       default="0.0" />

  <xacro:arg name="depth_camera_name"   default="realsese_d435" />
  <xacro:arg name="depth_camera_model"  default="SOPORTE_REALSENSE_D435" />
  <xacro:arg name="depth_base_frame"    default="base_link" />
  <xacro:arg name="depth_cam_pos_x"     default="-0.08149" />
  <xacro:arg name="depth_cam_pos_y"     default="0.0" />
  <xacro:arg name="depth_cam_pos_z"     default="0.345" />
  <xacro:arg name="depth_cam_roll"      default="0.0" />
  <xacro:arg name="depth_cam_pitch"     default="0.0" />
  <xacro:arg name="depth_cam_yaw"       default="0.0" />

  <!-- Properties -->
	<xacro:property name="r200_cam_rgb_px" value="0.005"/>
  <xacro:property name="r200_cam_rgb_py" value="0.018"/>
  <xacro:property name="r200_cam_rgb_pz" value="0.013"/>
  <xacro:property name="r200_cam_depth_offset" value="0.01"/>

  <xacro:property name="camera_model_stl"           value="$(arg camera_model)" />
  <xacro:property name="depth_camera_model_stl"     value="$(arg depth_camera_model)" />

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0.038" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sauronbot_description/meshes/bases/BASE_MODEL_03.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.266 0.266 0.094"/>
      </geometry>
    </collision>
    
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.3729096e+00"/>
      <inertia ixx="8.7002718e-03" ixy="-4.7576583e-05" ixz="1.1160499e-04"
               iyy="8.6195418e-03" iyz="-3.5422299e-06"
               izz="1.4612727e-02" />
    </inertial>
  </link>

  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.1465 0.027" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 -0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sauronbot_description/meshes/wheels/WHEEL_LEFT.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.1465 0.027" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sauronbot_description/meshes/wheels/WHEEL_RIGHT.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.033"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="2.8498940e-02" />
      <inertia ixx="1.1175580e-05" ixy="-4.2369783e-11" ixz="-5.9381719e-09"
               iyy="1.1192413e-05" iyz="-1.4400107e-11"
               izz="2.0712558e-05" />
      </inertial>
  </link>

  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.04207 0.00182 0.187" rpy="0 0 0"/>
  </joint>

  <link name="base_scan">
    <visual>
      <origin xyz="0 -0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sauronbot_description/meshes/sensors/RPLIDAR_A3.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.0315" radius="0.038"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <!-- Camara -->
  <joint name="$(arg camera_name)_camera_joint" type="fixed">
    <origin xyz="$(arg cam_pos_x) $(arg cam_pos_y) $(arg cam_pos_z)" rpy="$(arg cam_roll) $(arg cam_pitch) $(arg cam_yaw)"/>
    <parent link="$(arg base_frame)"/>
    <child link="$(arg camera_name)_camera_link"/>
  </joint>

  <link name="$(arg camera_name)_camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.030 0.027"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sauronbot_description/meshes/sensors/${camera_model_stl}.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="${camera_model_stl}_mat" />
    </visual>
  </link>

  <joint name="$(arg camera_name)_camera_rgb_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="$(arg camera_name)_camera_link"/>
    <child link="$(arg camera_name)_camera_rgb_frame"/>
  </joint>
  <link name="$(arg camera_name)_camera_rgb_frame"/>

  <joint name="$(arg camera_name)_camera_rgb_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
    <parent link="$(arg camera_name)_camera_rgb_frame"/>
    <child link="$(arg camera_name)_camera_rgb_optical_frame"/>
  </joint>
  <link name="$(arg camera_name)_camera_rgb_optical_frame"/>

  <!-- Depth Camara -->
  <joint name="$(arg depth_camera_name)_camera_joint" type="fixed">
    <origin xyz="$(arg depth_cam_pos_x) $(arg depth_cam_pos_y) $(arg depth_cam_pos_z)" rpy="$(arg depth_cam_roll) $(arg depth_cam_pitch) $(arg depth_cam_yaw)"/>
    <parent link="$(arg depth_base_frame)"/>
    <child link="$(arg depth_camera_name)_base_link"/>
  </joint>

  <xacro:arg name="use_nominal_extrinsics" default="false"/>
  <xacro:include filename="$(find sauronbot_description)/urdf/_d435.urdf.xacro" />
  <link name="$(arg depth_camera_name)_base_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.030 0.027"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://sauronbot_description/meshes/sensors/${depth_camera_model_stl}.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="${camera_model_stl}_mat" />
    </visual>
  </link>

  <xacro:sensor_d435 parent="$(arg depth_camera_name)_base_link" use_nominal_extrinsics="$(arg use_nominal_extrinsics)">
    <origin xyz="0 0 0.01201" rpy="0 0 0"/>
  </xacro:sensor_d435>

</robot>	